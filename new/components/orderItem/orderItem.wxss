
.order-item .item{
    width: 100%;
    margin: 0 0 20rpx;
    background: #fff;
    border-radius: 16rpx;
}
.order-item .head{
    overflow: hidden;
    height: 68rpx;
    padding: 0 36rpx;
    line-height: 68rpx;
    border-bottom: 2rpx dashed #ECECEC;
}
.order-item .head .time{
    float: left;
    color: #919191;
    font-size: 22rpx;
}
.order-item .head image{
    width: 18rpx;
    height: 18rpx;
    margin: 0 16rpx 0 0;
}
.order-item .head .status{
    float: right;
    color: #333;
    font-size: 26rpx;
}
.order-item .content{
    overflow: hidden;
    padding: 26rpx 34rpx 36rpx;
}
.order-item .desc{
    float: left;
}
.order-item .desc .title{
    width: 500rpx;
    color: #181818;
    font-size: 36rpx;
    line-height: 50rpx;
    margin: 0 0 16rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.order-item .desc .info{
    color: #919191;
    font-size: 28rpx;
    line-height: 40rpx;
}
.order-item .desc .info text{
    display: block;
    margin: 0 0 8rpx;
  }
.order-item .content .price{
    float: right;
    color: #FF6634;
    font-size: 30rpx;
    line-height: 50rpx;
}
.order-item .content .price text{
    font-size: 24rpx;
    margin: 0 8rpx 0 0;
}
.order-item .foot{
    overflow: hidden;
    padding: 0 34rpx;
}
.order-item .foot .time{
    width: 300rpx;
    float: left;
    line-height: 56rpx;
}
.order-item .foot .time image{
    width: 18rpx;
    height: 18rpx;
    margin: 0 16rpx 0 0;
}
.order-item .foot .time text{
    color: #FF6634;
    font-size: 24rpx;
}
.order-item .foot .in{
  float: left;
  width: 134rpx;
}
.order-item .foot .in image{
  width: 100%;
  height: 114rpx;
}
.order-item .foot .btns{
    overflow: hidden;
    margin: 0 0 38rpx;
    text-align: right;
}
.order-item .success .btns{
    margin: 25rpx 0 0;
}
.order-item .oprate-btn{
  display: inline-block;
  margin-left: 16rpx;
  border: 2rpx solid #f1f1f1;
  border-radius: 30rpx;
  width: 156rpx;
  height: 56rpx;
  color: #333;
  font-size: 26rpx;
  font-weight: 400;
  line-height: 56rpx;
  text-align: center;
  background-color: #f1f1f1
}
.order-item .oprate-btn:first-child{
    margin-left: 0;
}
.order-item .oprate-btn.orange{
  border-color: #ff6634;
  color: #fff;
  background-color: #ff6634;
}
.order-item .oprate-btn.white {
  border-color: #ff6634;
  color: #ff6634;
  background-color: #fff;
}
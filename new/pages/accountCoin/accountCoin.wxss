/**
 *  个人中心金币页
 */
.page{
  position: relative;
  padding: 0 0 120rpx;
  background: #F0F0F0;
}
.header{
  width: 100%;
  height: 210rpx;
  text-align: center;
  background-image: linear-gradient(#494140, #111111);
}
.header .current{
  color: #fff;
  font-size: 24rpx;
  padding: 50rpx 0 20rpx;
}
.header .price{
  color: #EDC385;
  font-size: 56rpx;
}
.container>.title{
  color: #000;
  font-size: 26rpx;
  line-height: 38rpx;
  margin: 12rpx 30rpx;
}
.list{
  background: #fff;
  margin: 0 0 38rpx;
}
.list .item{
  height: 120rpx;
  overflow: hidden;
  padding: 0 34rpx;
  border-bottom: 2rpx solid #E3E3E3;
}
.list .item  .left{
  width: 80%;
  float: left;
  padding: 18rpx 0 20rpx;
}
.list .item  .left .title{
  color: #000;
  height: 46rpx;
  font-size: 32rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  line-height: 46rpx;
  margin: 0 0 4rpx;
}
.list .item  .left .date{
  font-size: 24rpx;
  color: #919191;
  line-height: 34rpx;
}
.list .item .right{
  width: 20%;
  float: right;
  color: #E00000;
  font-size: 36rpx;
  line-height: 120rpx;
}
.list .item .add{
  color: #21BD28;
}
.container .logo{
  text-align: center;
}
.container .logo image{
  width: 450rpx;
  height: 42rpx;
}
.pupup .maks{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0,0,0,.5);
}
.explain{
  top: 50%;
  left: 50%;
  z-index: 999;
  width: 600rpx;
  position: fixed;
  background: #fff;
  border-radius: 16rpx;
  box-sizing: border-box;
  padding: 42rpx 38rpx 0 34rpx;
  transform: translate3d(-50%, -50%, 0);
}
.explain .title{
  color: #181818;
  font-size: 32rpx;
  margin: 0 0 28rpx;
  text-align: center;
}
.explain .content{
  margin: 0 0 40rpx;
  font-size: 26rpx;
}
.explain .content text{
  display: block;
  color: #5A5A5A;
  line-height: 34rpx;
  margin: 0 0 10rpx;
}
.explain .btn{
  width: 100%;
  height: 88rpx;
  color: #FF6634;
  font-size: 28rpx;
  line-height: 88rpx;
  text-align: center;
  border-top: 2rpx solid #eee;
}
.footer{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  color: #fff;
  height: 110rpx;
  font-size: 36rpx;
  line-height: 110rpx;
  text-align: center;
  background: #FF6634;
}

/**
 *  个人中心页
 */
page {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  background: #f0f0f0;
}
page .auth-btn {
  position: fixed;
  width: 100%;
  height: 100%;
  z-index: 999;
  opacity: 0;
  left: 0;
  top: 0;
}
page .authorize{
  z-index: 9999;
}
.top {
  padding: 18rpx 19rpx 0;
  background: #232533;
}
/*** 用户信息 ***/
.user {
  position: relative;
  height: 218rpx;
}
.user .bg {
  position: absolute;
  width: 712rpx;
  height: 218rpx; 
}
.user .info {
  position: relative;
  z-index: 100;
  padding: 43rpx 0 55rpx 53rpx;
  color: #fff;
}
.user .avatar {
  float: left;
  margin-right: 49rpx;
  border-radius: 120rpx;
  width: 120rpx;
  height: 120rpx;
  background: #fff;
}
.user .nickname {
  margin-top: 23rpx;
  font-size: 36rpx;
  font-weight: 600;
}
.user .vip {
  margin-top: 17rpx;
  font-size: 28rpx;
  font-weight: 400;
}
/*** 订单信息 ***/
.order {
  display: flex;
  background: #fff;
}
.order .icon{
  width: 48rpx;
  height: 48rpx;
  margin: 0 auto 34rpx;
  position: relative;
}
.order .icon .num{
  width: 26rpx;
  color: #fff;
  height: 26rpx;
  z-index: 9;
  top: -13rpx;
  right: -13rpx;
  font-size: 22rpx;
  line-height: 26rpx;
  position: absolute;
  border-radius: 50%;
  background: #FF0000;
}
.order navigator {
  flex: 1;
  padding-top: 45rpx;
  padding-bottom: 29rpx;
  color: #181818;
  font-size: 30rpx;
  font-weight: 400;
  text-align: center;
}
.order navigator image {
  width: 48rpx;
  height: 48rpx;
}
/*** 导航信息 ***/
.nav {
  margin-top: 20rpx;
  background: #fff;
}
.nav .row {
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #ececec;
  padding-left: 34rpx;
  padding-right: 50rpx;
  height: 100rpx;
  line-height: 100rpx;
}
.nav .row:last-of-type {
  border-bottom: none;
}
.nav .row view:first-of-type {
  color: #000;
  font-size: 32rpx;
  font-weight: 400;
}
.nav .row view:last-of-type text {
  color: #ff6634;
  font-size: 36rpx;
  font-weight: 500;
}
.nav .row .icon-right {
  margin-top: 41rpx;
  margin-left: 32rpx;
}
/*** 关注公众号 ***/
.follow {
  margin-top: 20rpx;
  background: #fff;
}
.follow .head {
  border-bottom: 1rpx solid #ececec;
  height: 86rpx;
  color: #929292;
  font-size: 26rpx;
  font-weight: 400;
  line-height: 86rpx;
  text-align: center;
}
.follow .row {
  padding: 28rpx 33rpx 36rpx;
}
.follow .row .btn {
  float: right;
  margin-top: -66rpx;
  border: 2rpx solid #ff6634;
  border-radius: 8rpx;
  padding: 0;
  width: 200rpx;
  height: 62rpx;
  color: #ff6634;
  font-size: 28rpx;
  font-weight: 400;
  line-height: 58rpx;
  text-align: center;
  background: none;
}
.follow .row .btn::after {
  border: none;
}
.follow .row .text:nth-of-type(1) {
  color: #000;
  font-size: 32rpx;
  font-weight: 500;
}
.follow .row .text:nth-of-type(2) {
  margin-top: 18rpx;
  color: #ff0000;
  font-size: 28rpx;
  font-weight: 400;
}
/*** 联系客服 ***/
.contact {
  margin-top: 63rpx;
  color: #4287ff;
  font-size: 28rpx;
  font-weight: 400;
  line-height: 30rpx;
  text-align: center;
}
.contact .icon-call {
  vertical-align: top;
  margin-right: 18rpx;
}
/*** logo ***/
.logo-colour {
  display: block;
  margin: 230rpx auto 60rpx;
  width: 412rpx;
  height: 48rpx;
}
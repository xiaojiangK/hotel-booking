/**
 *  搜索页
 */
page {
  padding-top: 84rpx;
}
/*** 搜索框 ***/
.search {
  position: fixed;
  top: 0;
  z-index: 999;
  background: #fff;
  padding: 14rpx 0 0 26rpx;
}
.search .wrap {
  display: inline-block;
  vertical-align: top;
  position: relative;
  border-radius: 70rpx;
  padding-left: 72rpx;
  padding-right: 66rpx;
  width: 466rpx;
  height: 70rpx;
  background: #f8f8f8;
}
.search .wrap input {
  display: inline-block;
  vertical-align: top;
  position: relative;
  z-index: 1;
  margin-top: 10rpx;
  width: 466rpx;
  height: 54rpx;
  line-height: 54rpx;
  color: #333;
  font-size: 24rpx;
  font-weight: 400;
}
.search .icon-search,
.search .icon-clear-1 {
  position: absolute;
  z-index: 100;
}
.search .icon-search {
  top: 16rpx;
  left: 28rpx;
}
.search .icon-clear-1 {
  top: 17rpx;
  right: 30rpx;
}
.search .btn {
  display: inline-block;
  vertical-align: top;
  padding: 0 26rpx;
  height: 70rpx;
  color: #ff6634;
  font-size: 30rpx;
  font-weight: 400;
  line-height: 70rpx;
}
/*** 选项 ***/
.option {
  padding: 38rpx 32rpx 0;
}
.option .icon-delete {
  float: right;
  margin-top: -4rpx;
  margin-right: 14rpx;
}
.option .item {
  margin-bottom: 34rpx;
}
.option .item .label {
  margin-left: 4rpx;
  margin-bottom: 48rpx;
  color: #333;
  font-size: 30rpx;
  font-weight: 400;
}
.option .tag text { 
  display: inline-block;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  width: 164rpx;
  height: 72rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #595758;
  font-size: 24rpx;
  font-weight: 400;
  line-height: 72rpx;
  text-align: center;
  background: #f4f5f9;
}
.option .tag text:nth-child(4n) {
  margin-right: 0;
}
/*** 搜索列表 ***/
.list .item {
  position: relative;
  border-bottom: 1rpx solid #e6e6e6;
  padding: 36rpx 22rpx 36rpx 74rpx; 
}
.list .item:last-of-type {
  border-bottom: none;
}
.list .item .icon-address-1,
.list .item .icon-search-1,
.list .item .icon-building {
  position: absolute;
  top: 36rpx;
  left: 20rpx;
}
.list .item .row {
  display: flex;
  justify-content: space-between;
  color: #999;
  font-size: 32rpx;
  font-weight: 400;
}
.list .item .row view:first-of-type {
  max-width: 432rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.list .item .row:first-of-type view:first-of-type {
  color: #333;
}
.list .item .keyword {
  color: #ff6634;
}
.list .item .row:nth-of-type(2) {
  margin-top: 28rpx;
}
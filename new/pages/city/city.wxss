/**
 *  选择城市页
 */

 /*** 搜索框 ***/
.search {
  position: fixed;
  top: 0;
  z-index: 999;
  background: #fff;
  padding: 14rpx 13rpx 20rpx;
}
.search .wrap {
  display: inline-block;
  vertical-align: top;
  position: relative;
  border-radius: 70rpx;
  padding-left: 72rpx;
  padding-right: 66rpx;
  width: 466rpx;
  height: 70rpx;
  background: #f8f8f8;
}
.search .wrap input {
  display: inline-block;
  vertical-align: top;
  position: relative;
  z-index: 1;
  margin-top: 10rpx;
  width: 466rpx;
  color: #333;
  font-size: 24rpx;
  font-weight: 400;
}
.search .icon-search,
.search .icon-clear-1 {
  position: absolute;
  z-index: 100;
}
.search .icon-search {
  top: 16rpx;
  left: 28rpx;
}
.search .icon-clear-1 {
  top: 17rpx;
  right: 30rpx;
}
.search .btn {
  display: inline-block;
  vertical-align: top;
  padding: 0 26rpx;
  height: 70rpx;
  color: #ff6634;
  font-size: 30rpx;
  font-weight: 400;
  line-height: 70rpx;
}
/*** 标签 ***/
.label {
  position: absolute;
  left: 0;
  width: 100%;
  margin-top: 20rpx;
  padding-left: 32rpx;
  color: #929292;
  font-size: 26rpx;
  font-weight: 400rpx;
  line-height: 60rpx;
  background: #f6f6f6;
}
/*** 列表 ***/
.list{
  margin-top: 184rpx;
}
.list .item {
  box-sizing: border-box;
  margin: 0 30rpx;
  border-bottom: 1rpx solid #e5e5e5;
  height: 90rpx;
  color: #000;
  font-size: 32rpx;
  font-weight: 400;
  line-height: 90rpx;
}
/*** 描述 ***/
.desc {
  margin: 34rpx 0;
  color: #929292;
  font-size: 28rpx;
  font-weight: 400;
  text-align: center;
}
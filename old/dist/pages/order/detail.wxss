.page{
    background: #fff;
}
.order-status{
    padding: 28rpx 0 32rpx 32rpx;
    border-bottom: 2rpx solid #ECECEC;
}
.order-status .title{
    color: #181818;
    font-size: 42rpx;
    line-height: 60rpx;
}
.order-status .time{
    color: #FF6634;
    font-size: 24rpx;
}
.order-status .cancel{
    color: #929292;
}
.sum-price{
    padding: 40rpx 32rpx;
}
.sum-price .item{
    margin: 0 0 6rpx;
}
.sum-price .item .title{
    width: 112rpx;
    font-size: 28rpx;
    color: #181818;
    line-height: 40rpx;
    margin: 0 10rpx 0 0;
    display: inline-block;
}
.sum-price .item .price{
    color: #FF6634;
    font-size: 46rpx;
    line-height: 46rpx;
}
.sum-price .item .price text{
    font-size: 28rpx;
    margin: 0 4rpx 0 0;
}
.sum-price .item .desc{
    color: #919191;
    font-size: 28rpx;
    line-height: 40rpx;
    margin: 0 0 0 24rpx;
}
.sum-price .item .succ{
    color: #FF6634;
}
.detail-list{
    overflow: hidden;
}
.detail-list .fold-btn{
    margin: 0 auto 50rpx;
}
.detail-list .fold-btn .btn{
    width: 186rpx;
    height: 40rpx;
    margin: 0 auto;
    color: #B2B2B2;
    font-size: 24rpx;
    background: #fff;
    line-height: 40rpx;
    text-align: center;
    position: relative;
    border-radius: 40rpx;
    border: 2rpx solid #ECECEC;
}
.detail-list .fold-btn{
    width: 100%;
    height: 20rpx;
    border-bottom: 2rpx dashed #ECECEC;
}
.detail-list .list{
    display: none;
    transition: .3s all;
    border-bottom: 2rpx solid #ECECEC;
}
.detail-list .show{
    display: block;
}
.control{
    margin: 52rpx 0 0;
    padding: 0 0 40rpx;
    border-bottom: 20rpx solid #F0F0F0;
}
.control .btns{
    overflow: hidden;
    display: flex;
    justify-content: center;
    margin: 0 32rpx 30rpx;
}
.control .btns view{
    float: left;
    width: 330rpx;
    height: 80rpx;
    color: #fff;
    font-size: 30rpx;
    line-height: 80rpx;
    text-align: center;
    border-radius: 4rpx;
}
.control .btns .cancel{
    background: #ccc;
    margin: 0 25rpx 0 0;
}
.control .btns .to-pay{
    background: #FF6634;
}
.control .tip{
    margin: 0 32rpx;
    color: #929292;
    font-size: 26rpx;
    line-height: 36rpx;
}
.info{
    padding: 36rpx 30rpx 0;
    border-bottom: 20rpx solid #F0F0F0;
}
.info>.title{
    color: #181818;
    font-size: 28rpx;
    line-height: 40rpx;
    margin: 0 0 26rpx;
    background: url('https://pbwci.qun.hk/FrPW-iJgKElkFPsWDhcI4xMjacv2') right center no-repeat;
    background-size: 11rpx 21rpx;
}
.info .content{
    padding: 0 0 20rpx;
    margin: 0 0 34rpx;
    border-bottom: 2rpx solid #ECECEC;
}
.info .content .title{
    color: #181818;
    font-size: 32rpx;
    margin: 0 0 20rpx;
    line-height: 46rpx;
}
.info .content .desc{
    color: #333;
    font-size: 26rpx;
    margin: 0 0 28rpx;
    line-height: 37rpx;
    padding: 0 140rpx 0 0;
}
.info:last-child{
    border-bottom: none;
}
.info .menu{
    display: flex;
}
.info .menu .item{
    flex: 1;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    border-right: 2rpx solid #ECECEC;
}
.info .menu .item:last-child{
    border: none;
}
.info .menu .item image{
    width: 28rpx;
    height: 28rpx;
    margin: 0 20rpx 0 0;
}
.info .menu .item text{
    color: #595959;
    font-size: 28rpx;
    line-height: 40rpx;
}
.info .list .item{
    overflow: hidden;
    padding: 0 0 18rpx;
    line-height: 40rpx;
}
.info .list .item .title{
    float: left;
    color: #929292;
    font-size: 28rpx;
}
.info .list .item .desc{
    float: right;
    color: #181818;
    font-size: 28rpx;
}
.info .list .item .desc view{
    font-size: 24rpx;
    color: #929292;
    text-align: right;
    line-height: 34rpx;
}





















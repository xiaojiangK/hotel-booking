.page{
    padding: 150rpx 0 0;
    position: relative;
    background: #F0F0F0;
}
.page button{
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    z-index: 999;
}
.page .authorize{
    z-index: 9999;
}
.navigate{
    display: flex;
    position: fixed;
    height: 150rpx;
    width: 100%;
    top: 0;
    left: 0;
    z-index: 999;
    background: #EDC385;
    overflow: hidden;
}
.navigate .title {
    display: block;
    margin-top: 55rpx;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    flex: 1;
    text-align: center;
    font-size: 38rpx;
    height: 96rpx;
    line-height: 96rpx;
    padding: 0 72rpx;
}
.navigate .title text {
    position: relative;
    display: block;
    width: 100%;
    height: 100%;
    color: #fff;
    white-space: nowrap;
}
.user{
    padding: 0 20rpx;
    background: #EDC385;
}
.user .user-box{
    margin: 0 auto;
    background: #494140;
    padding: 38rpx 0 44rpx 48rpx;
    border-top-left-radius: 28rpx;
    border-top-right-radius: 28rpx;
    background: url('https://pbwci.qun.hk/FmZRAjdI56eFmAdUCCm9VO6q3OOI') top center no-repeat;
    background-size: 100% 100%;
}
.user .noMember{
    background: url('https://pbwci.qun.hk/FkgLmLdX7wp4EHpQeP2_Z9NackVT') top center no-repeat;
    background-size: 100% auto;
}
.user .avatar{
    width: 130rpx;
    height: 130rpx;
    padding: 0 34rpx 0 0;
    display: table-cell;
    vertical-align: middle;
}
.user .avatar image{
    width: 100%;
    height: 130rpx;
    border-radius: 50%;
    background: #C9C7D4;
}
.user .username{
    display: table-cell;
    vertical-align: middle;
}
.user .username .name{
    width: 480rpx;
    height: 60rpx;
    color: #fff;
    font-size: 36rpx;
    line-height: 50rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.user .username .date{
    color: #fff;
    font-size: 28rpx;
    line-height: 40rpx;
    position: relative;
}
.order-menu{
    display: flex;
    margin: 0 0 20rpx;
    background: #fff;
    padding: 40rpx 0 30rpx; 
}
.order-menu .item{
    flex: 1;
    text-align: center;
}
.order-menu .item .icon{
    width: 46rpx;
    height: 48rpx;
    position: relative;
    margin: 0 auto 20rpx;
}
.order-menu .item .icon image{
    width: 100%;
    height: 48rpx;
}
.order-menu .item .title{
    font-size: 30rpx;
    color: #181818;
    line-height: 42rpx;
}
.order-menu .item .num{
    width: 26rpx;
    color: #fff;
    height: 26rpx;
    z-index: 9;
    top: -13rpx;
    right: -13rpx;
    font-size: 22rpx;
    line-height: 26rpx;
    position: absolute;
    border-radius: 50%;
    background: #FF0000;
}
.my{
    background: #fff;
}
.my .item{
    height: 100rpx;
    line-height: 100rpx;
    position: relative;
    padding: 0 54rpx 0 34rpx;
    border-bottom: 2rpx solid #ECECEC;
    background: url('https://pbwci.qun.hk/FrPW-iJgKElkFPsWDhcI4xMjacv2') 690rpx center no-repeat;
    background-size: 8rpx 16rpx;
}
.my .item .title{
    float: left;
    color: #000;
    font-size: 32rpx;
}
.my .item .number{
    float: right;
    font-size: 36rpx;
    color: #FF6634;
    margin: 0 32rpx 0 0;
}
.contact{
    margin: 46rpx 0 0;
    display: flex;
    position: relative;
    align-items: center;
    justify-content: center;
}
.contact image{
    width: 30rpx;
    height: 30rpx;
    margin: 0 18rpx 0 0;
}
.contact text{
    color: #4287FF;
    font-size: 28rpx;
    line-height: 40rpx;
}

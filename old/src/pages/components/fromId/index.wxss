.fromId{
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
}
.fromId button{
    width: 100%;
    height: 100%;
    margin: 0;
    padding: 0;
    border-radius: 0;
    position: absolute;
    opacity: 0;
    z-index: 9;
    left: 0;
    top: 0;
}
.fromId button::after{
    border:none;
}
.fromId .btn-id{
    width: 100%;
    height: 100%;
    position:absolute;
    z-index: 9;
    top: 0;
}
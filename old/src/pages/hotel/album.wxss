.page{
    background: #fff;
    padding: 12rpx 0 0;
}
.grids{
    overflow: hidden;
    padding: 0 10rpx;
}
.grids .grid{
    width: 50%;
    float: left;
    height: 360rpx;
    margin: 0 0 10rpx;
    position: relative;
    padding: 0 10rpx 0 0;
    box-sizing: border-box;
}
.grids .grid:nth-of-type(2n){
    padding: 0;
}
.grids .grid image{
    width: 100%;
    height: 360rpx;
}
.grids .grid .title{
    position: absolute;
    bottom: 0;
    left: 10rpx;
    width: 360rpx;
    color: #fff;
    height: 80rpx;
    font-size: 28rpx;
    line-height: 80rpx;
    text-align: center;
    background-image: linear-gradient(-180deg, rgba(0,0,0,0), rgba(0,0,0,.3));
}
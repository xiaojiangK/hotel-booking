.header{
    width: 100%;
    height: 210rpx;
    text-align: center;
    background-image: linear-gradient(#494140, #111111);
}
.header .current{
    color: #fff;
    font-size: 24rpx;
    padding: 50rpx 0 20rpx;
}
.header .price{
    color: #EDC385;
    font-size: 56rpx;
}
.follow{
    background: #fff;
    padding: 20rpx 26rpx;
    border-bottom: 8rpx solid #ddd;
}
.follow .content{
    display: table-cell;
    padding: 0 40rpx 0 0;
    vertical-align: middle;
}
.follow .content .title{
    color: #000;
    font-size: 30rpx;
    margin: 0 0 4rpx;
    line-height: 46rpx;
}
.follow .content .desc{
    color: #909090;
    font-size: 24rpx;
    line-height: 34rpx;
}
.main{
    background: #fff;
    text-align: center;
    overflow: hidden;
    padding: 100rpx 0;
}
.main .qrcode{
    width: 288rpx;
    height: 288rpx;
    margin: 0 auto 55rpx;
}
.main .qrcode image{
    width: 100%;
    height: 288rpx;
}
.main .desc text{
    color: #919191;
    line-height: 50rpx;
    display: block;
}
.main .btn{
    width: 400rpx;
    height: 97rpx;
    color: #fff;
    line-height: 97rpx;
    text-align: center;
    border-radius: 60rpx;
    background: #14b717;
    margin: 100rpx auto 24rpx;
}
